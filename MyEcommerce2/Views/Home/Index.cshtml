
@{
    ViewBag.Title = "Home Page";
}
<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1 id="homeHeading">PROFESSIONAL, ORLANDO APPLIANCE REPAIR FOR YOUR HOME OR BUSINESS</h1>
            <hr>
            <p>With Orlando Appliance Repair, you can rely on fast and skilled same day appliance repair service. Just give Us a Call, no strings attached!</p>
            <a href="/MyMessages/New" class="btn btn-primary btn-xl page-scroll">Send Me a Message</a>
        </div>
    </div>
</header>

<section id="card-area">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <hr>
                <h2 class="text-center">APPLIANCE REPAIR</h2>
                <hr>
            </div>
        </div>
        <div id="card" class="row"></div>
    </div>
</section>
<section id="services" class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <hr />
                <h2 class="section-heading">We Provide</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="card">
                    <img class="img-fluid" src="~/Content/images/90daywarranty.png" alt="warranty">
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card">
                    <img class="img-fluid" src="~/Content/images/LOW-PRICE.jpg" alt="low-prices">
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card">
                    <img class="img-fluid" src="~/Content/images/Customer-Support.jpg" alt="customer-support">
                </div>
            </div>
        </div>
    </div>

</section>

<div id="map">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h3>Areas covered in Orlando for Appliance Repair and Electronics Repair Services</h3>
                <hr class="primary">
            </div>
        </div>
        <div class="row">
            <div class="embed-responsive embed-responsive-21by9">
                <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d224444.70495248452!2d-81.50883827574293!3d28.48109711612237!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e773d8fecdbc77%3A0xac3b2063ca5bf9e!2sOrlando%2C+FL!5e0!3m2!1sen!2sus!4v1490497825484" allowfullscreen></iframe>
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-lg-12">
                <div id="city" class="justify-content-end"></div>
            </div>
        </div>
    </div>
</div>