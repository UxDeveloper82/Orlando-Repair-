<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootswatch/dist/united/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-primary flex-column">
        <div class="container">
            <!-- Branding Image -->
            @Html.ActionLink("OR-SERVICES", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <!-- Left Side Of Navbar -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("My-Services", "Services", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("My-Blog", "Index", "MyBlogs", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Send Message", "New", "MyMessages", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="text-center footer-default">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h2><span style="color:red;">Orlando</span> Appliance-Repair</h2>
                        <br>
                        <br><i class="fa fa-phone"></i> 863-216-8903
                        <br><i class="fa fa-home"></i> Mon - Sat 10am to 5pm
                        <br><i class="fa fa-envelope"></i><a href="mailto:electronicsmf@aol.com">Electronicsmf@aol.com</a>

                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Around the Web</h3>
                        <ul class="social-network social-circle">
                            <li>
                                <a href="" class="icoFacebook" title="Facebook"><i class="fa fa-fw fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="" class="icoGoogle" title="Google"><i class="fa fa-fw fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#" class="icoTwitter" title="Twitter"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="" class="icoYelp" title="yelp"><i class="fa fa-fw fa-yelp"></i></a>
                            </li>
                            <li>
                                <a href="#" class="icoDribbble" title="Dribbble"><i class="fa fa-fw fa-dribbble"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Payments</h3>
                        <img src="~/Content/images/payments.png" alt="credit_card_payment">
                    </div>
                </div><!--row-->
            </div><!--container-->
        </div><!--footer above-->
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <p>&copy; @DateTime.Now.Year - Orlando Appliance Repair.All Rights Reserved.</p>
                        <br /><span>Website design by <a href="http://icreatesites4u.com/"><strong>icreatesites4u.com</strong></a></span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
